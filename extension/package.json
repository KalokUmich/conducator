{
  "name": "ai-collab",
  "displayName": "AI Collab",
  "description": "AI collaboration extension for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:aiCollabView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-collab-sidebar",
          "title": "AI Collab",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "ai-collab-sidebar": [
        {
          "type": "webview",
          "id": "aiCollabView",
          "name": "Chat",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-collab.openPanel",
        "title": "AI Collab: Open Panel"
      }
    ],
    "configuration": {
      "title": "AI Collab",
      "properties": {
        "aiCollab.role": {
          "type": "string",
          "enum": [
            "lead",
            "member"
          ],
          "default": "member",
          "description": "Your role in the AI collaboration. 'lead' has access to advanced features like Create Summary, Generate Changes, and Auto Apply. 'member' can only chat."
        },
        "aiCollab.backendUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Backend server URL. Use ngrok URL for remote access."
        },
        "aiCollab.autoStartLiveShare": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start Live Share when opening the panel as lead."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node --test out/tests/*.test.js",
    "lint": "eslint src --ext ts",
    "build:css": "tailwindcss -i ./media/input.css -o ./media/tailwind.css --minify"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.56.0",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "vsls": "^1.0.4753"
  }
}
